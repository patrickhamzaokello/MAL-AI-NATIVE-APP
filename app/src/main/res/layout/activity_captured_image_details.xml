<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:background="@color/background_green"
    tools:context=".CapturedImageDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/analyeParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_card"
        android:backgroundTint="#fff"
        android:layout_margin="20dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinsbold"
            android:includeFontPadding="false"
            android:text="Provide Image Details"
            android:textAlignment="center"
            android:textColor="#B5000000"
            android:textSize="25sp"
            android:transitionName="logo_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/subheading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinslight"
            android:includeFontPadding="false"
            android:text="Add image details and save for later analysis"
            android:textColor="#B5000000"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:transitionName="logo_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heading" />


        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dashed_border"
            app:layout_constraintTop_toBottomOf="@id/subheading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/captured_image"
                android:layout_width="300dp"
                android:layout_height="225dp"
                android:layout_centerInParent="true"
                android:src="@drawable/malimagesize_default" />


        </RelativeLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_fullname"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Slide ID"
            android:layout_marginHorizontal="20dp"
            android:textColorHint="@color/black"
            android:transitionName="username_input"
            app:boxStrokeColor="@color/black"
            app:boxStrokeErrorColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/image_layout"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTextFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinslight"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/site"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Site"
            android:layout_marginHorizontal="20dp"
            android:textColorHint="@color/black"
            android:transitionName="username_input"
            app:boxStrokeColor="@color/black"
            app:boxStrokeErrorColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/login_fullname"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/entersite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinslight"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/date"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Date"
            android:layout_marginHorizontal="20dp"
            android:textColorHint="@color/black"
            android:transitionName="username_input"
            app:boxStrokeColor="@color/black"
            app:boxStrokeErrorColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/site"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enterdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinslight"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/age"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Age"
            android:layout_marginHorizontal="20dp"
            android:textColorHint="@color/black"
            android:transitionName="username_input"
            app:boxStrokeColor="@color/black"
            app:boxStrokeErrorColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enterage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinslight"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sex"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Sex"
            android:layout_marginHorizontal="20dp"
            android:textColorHint="@color/black"
            android:transitionName="username_input"
            app:boxStrokeColor="@color/black"
            app:boxStrokeErrorColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/age"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/entersex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinslight"
                />


        </com.google.android.material.textfield.TextInputLayout>






        <LinearLayout
            android:id="@+id/savebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn_bg"
            android:backgroundTint="@color/primary_color"
            android:clickable="true"
            android:elevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/edge_val"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/sex">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/clarity_image_gallery_line"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="Save Image"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/retakebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn_bg"
            android:backgroundTint="#585A5E"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/edge_val"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/savebtn">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/malanalyze"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="Retake Image"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
