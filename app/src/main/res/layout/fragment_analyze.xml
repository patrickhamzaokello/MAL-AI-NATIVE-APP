<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    tools:context=".Fragments.AnalyzeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/analyeParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_card"
        android:backgroundTint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinsbold"
            android:includeFontPadding="false"
            android:text="Capture New Image"
            android:textAlignment="center"
            android:textColor="#B5000000"
            android:textSize="25sp"
            android:transitionName="logo_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <TextView
            android:id="@+id/subheading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinsregular"
            android:includeFontPadding="false"
            android:text="Upload image from gallery or use phone camera to capture sample image"
            android:textAlignment="center"
            android:textColor="#B5000000"
            android:textSize="18sp"
            android:transitionName="logo_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heading" />

        <RelativeLayout
            android:id="@+id/camera_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="30dp"
            android:background="@drawable/rounded_card"
            android:backgroundTint="#F1FBF4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subheading">

            <TextView
                android:id="@+id/type_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinsregular"
                android:includeFontPadding="false"
                android:text="Capture Image from Camera"
                android:textColor="#023E30"
                android:textSize="15sp"
                android:transitionName="logo_text"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:id="@+id/Camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_btn_bg"
                android:backgroundTint="#023E30"
                android:clickable="true"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:layout_below="@+id/type_heading"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Camera"
                    android:textColor="@color/background_green"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gallery_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="30dp"
            android:background="@drawable/rounded_card"
            android:backgroundTint="#F1FBF4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/camera_layout">

            <TextView
                android:id="@+id/type_heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinsregular"
                android:includeFontPadding="false"
                android:text="Fetch Image from Phone Gallery"
                android:textColor="#023E30"
                android:textSize="15sp"
                android:transitionName="logo_text"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:id="@+id/gallery_take"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_btn_bg"
                android:backgroundTint="@color/primary_color"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_below="@+id/type_heading2"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
           >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Gallery"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/continue_agree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:text="@string/continue_agree"
            android:textColor="#707070"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gallery_layout"
            android:textSize="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:text="@string/learnmore"
            android:textColor="#C3C3C3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/continue_agree"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
